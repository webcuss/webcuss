{
    "manifest_version": 3,
    "name": "Webcuss",
    "description": "Webcuss, comment everywhere!",
    "version": "0.1.0",
    "action": {
        "default_popup": "build/index.html",
        "default_icon": "build/icon32.png"
    },
    "icons": {
        "16": "build/icon16.png",
        "32": "build/icon32.png",
        "48": "build/icon48.png",
        "128": "build/icon128.png"
    },
    "permissions": [
        "tabs",
        "downloads",
        "storage",
        "https://webcuss.xyz/*"
    ],
    "commands": {
        "toggle-feature-debug": {
          "suggested_key": "Ctrl+Shift+Comma",
          "description": "Toggle feature debug"
        }
      }
}